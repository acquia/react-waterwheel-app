{
  "name": "react-drupal-waterwheel-app",
  "private": true,
  "version": "1.0.0",
  "description": "React + Drupal 8 + Waterwheel + JSONAPI",
  "license": "MIT",
  "scripts": {
    "start": "./node_modules/.bin/webpack-dev-server --progress --config webpack.config.js --host 0.0.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "eslint-config-xo-react": "^0.12.0",
    "eslint-plugin-react": "^7.0.1",
    "html-webpack-plugin": "^2.28.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.0.0",
    "waterwheel": "^1.3.2"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "xo": {
    "space": true,
    "ignores": [
      "webpack.config.js"
    ],
    "extends": "xo-react"
  }
}
